{
  "name": "ExaWorks PSI/J Python Dev Container",
  "image": "mcr.microsoft.com/devcontainers/python:0-3.11",
  "containerEnv": {
    "PYTHONPATH": "${containerWorkspaceFolder}/src:${containerWorkspaceFolder}/tests/plugins1:${containerWorkspaceFolder}/tests/plugins2"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt -r requirements-dev.txt",
  "remoteUser": "vscode"
}
